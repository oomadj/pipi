<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_user_list"
    android:layout_height="100dp"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageItemUserListFragmentIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@color/enterprise_azure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemUserListFragmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imageItemUserListFragmentIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemUserListFragmentAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/textItemUserListFragmentName"
        app:layout_constraintStart_toEndOf="@id/textItemUserListFragmentName"
        app:layout_constraintTop_toTopOf="@id/textItemUserListFragmentName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemUserListFragmentHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imageItemUserListFragmentIcon"
        app:layout_constraintStart_toStartOf="@id/textItemUserListFragmentName"
        app:layout_constraintTop_toTopOf="@id/imageItemUserListFragmentIcon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemUserListFragmentWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imageItemUserListFragmentIcon"
        app:layout_constraintStart_toEndOf="@id/textItemUserListFragmentHeight"
        app:layout_constraintTop_toTopOf="@id/imageItemUserListFragmentIcon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemUserListFragmentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textItemUserListFragmentName"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>